<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.prophet.sqlite.RegisztracioActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Felhasználónév"
        android:ems="10"
        android:id="@+id/usernameinput"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Jelszó"
        android:ems="10"
        android:id="@+id/passwordinput1"
        android:layout_below="@+id/usernameinput"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Jelszó újra"
        android:ems="10"
        android:id="@+id/passwordinput2"
        android:layout_below="@+id/passwordinput1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Teljes név"
        android:ems="10"
        android:id="@+id/teljesnevinput"
        android:layout_below="@+id/passwordinput2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Regisztráció"
        android:id="@+id/regisztracio"
        android:layout_below="@+id/teljesnevinput"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Vissza"
        android:id="@+id/vissza"
        android:layout_below="@+id/regisztracio"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
